<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_list_item"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <TextView
            android:layout_marginLeft="@dimen/horizontal_margin_list_item"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/size_text_list_item"
            tool:text="Text"/>

    <ImageView
            android:layout_marginLeft="@dimen/horizontal_margin_list_item"
            android:layout_marginRight="@dimen/horizontal_margin_list_item"
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_forever"/>

</LinearLayout>